@{
    ViewData["Title"] = "Delete";
}

@model MovieDB.Models.MovieResponse

<center>
    <h1>Confirm Deletion</h1>
</center>
<h3>Are you sure you want to delete @Model.Title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-area="" asp-controller="Home" asp-action="MovieCollection" class="btn-danger">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>
